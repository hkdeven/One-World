<p id="notice"><%= notice %></p>

<h1>Available Housing</h1>

<table>
  <thead>
    <tr>
      <th>Headline</th>
      <th>Street address</th>
      <th>City</th>
      <th>Country</th>
      <th>Description</th>
      <th>Accommodates</th>
      <th>Availability</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.headline %></td>
        <td><%= listing.address.street_address %></td>
        <td><%= listing.address.city %></td>
        <td><%= listing.address.country %></td>
        <td><%= listing.description %></td>
        <td><%= listing.accommodates %></td>
        <td><%= listing.availability %></td>
        <td><%= image_tag listing.listing_images.first.picture %></td>

        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <%# end%>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %> |
